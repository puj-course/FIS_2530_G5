<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="709.0" prefWidth="335.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.MiControlador">

    <center>
        <AnchorPane prefHeight="724.0" prefWidth="335.0"
                    style="-fx-background-image: url('/images/Profile.png');
                           -fx-background-repeat: no-repeat;
                           -fx-background-size: cover;"
                    BorderPane.alignment="CENTER">

            <children>
                <TextField fx:id="txtTelefono"
                           layoutX="34.0" layoutY="266.0"
                           prefHeight="38.0" prefWidth="273.0"
                           promptText="Escribe tu teléfono..."
                           style="-fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-background-color: white;
                                  -fx-border-color: EFE49C;" />

                <Button fx:id="btnTelefono"
                        layoutX="211.0" layoutY="266.0"
                        prefHeight="37.0" prefWidth="98.0"
                        text="Aplicar"
                        style="-fx-background-radius: 10;
                               -fx-border-radius: 10;
                               -fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #EFE49C, #BFFF8A);
                               -fx-text-fill: black;" />

                <TextField fx:id="txtCorreo"
                           layoutX="34.0" layoutY="343.0"
                           prefHeight="38.0" prefWidth="273.0"
                           promptText="Escribe tu correo..."
                           style="-fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-background-color: white;
                                  -fx-border-color: EFE49C;" />

                <Button fx:id="btnCorreo"
                        layoutX="212.0" layoutY="343.0"
                        prefHeight="38.0" prefWidth="96.0"
                        text="Aplicar"
                        style="-fx-background-radius: 10;
                               -fx-border-radius: 10;
                               -fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #EFE49C, #BFFF8A);
                               -fx-text-fill: black;" />

                <TextField fx:id="txtDireccion"
                           layoutX="34.0" layoutY="419.0"
                           prefHeight="38.0" prefWidth="273.0"
                           promptText="Escribe tu dirección..."
                           style="-fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-background-color: white;
                                  -fx-border-color: EFE49C;" />

                <Button fx:id="btnDireccion"
                        layoutX="212.0" layoutY="419.0"
                        prefHeight="38.0" prefWidth="96.0"
                        text="Aplicar"
                        style="-fx-background-radius: 10;
                               -fx-border-radius: 10;
                               -fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #EFE49C, #BFFF8A);
                               -fx-text-fill: black;" />

                <Button fx:id="btnCerrarSesion"
                        layoutX="34.0" layoutY="553.0"
                        prefHeight="38.0" prefWidth="276.0"
                        text="CERRAR SESIÓN"
                        style="-fx-background-radius: 10;
                               -fx-border-radius: 10;
                               -fx-background-color: white;
                               -fx-text-fill: #44B75B;" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>
